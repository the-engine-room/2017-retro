#!/bin/bash

# build site with jekyll, by default to `_site' folder
bundle exec jekyll build

# initialize new repo from newly built _site folder
cd /home/travis/build/the-engine-room/2016-retro/_site
git init
git config user.email "mayarichman@gmail.com"
git config user.name "${GH_USERNAME}"
git remote add upstream https://${GH_USERNAME}:${GH_TOKEN}@github.com/${GH_OWNER}/${GH_REPO}.git
git fetch upstream
git reset upstream/gh-pages
touch .nojekyll

# add, commit and push changes to master
git add -A .
git commit -a -m "Travis #$TRAVIS_BUILD_NUMBER"
git push --force --quiet "https://mayarichman:${GH_TOKEN}@github.com/the-engine-room/2016-retro.git" master:master > /dev/null 2>&1
